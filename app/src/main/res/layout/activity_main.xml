<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clPrincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@android:color/holo_green_light"
    tools:context="com.example.pc_31.eventos.MainActivity">

    <ImageView
        android:id="@+id/ivBebida"
        android:layout_width="79dp"
        android:layout_height="114dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/drink" />

    <TextView
        android:id="@+id/tvBebida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/ivBebida"
        tools:layout_editor_absoluteX="40dp" />

    <ImageView
        android:id="@+id/ivFresas"
        android:layout_width="127dp"
        android:layout_height="114dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/ivBebida"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fresas" />

    <TextView
        android:id="@+id/tvFresas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/tvBebida"
        app:layout_constraintTop_toBottomOf="@+id/ivFresas" />

    <ImageView
        android:id="@+id/ivGalleta"
        android:layout_width="131dp"
        android:layout_height="107dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivFresas"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/galleta" />

    <TextView
        android:id="@+id/tvGalleta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.558"
        app:layout_constraintStart_toEndOf="@+id/tvFresas"
        app:layout_constraintTop_toBottomOf="@+id/ivGalleta" />

    <ImageView
        android:id="@+id/ivGelatina"
        android:layout_width="139dp"
        android:layout_height="124dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBebida"
        app:srcCompat="@drawable/gelatina" />

    <TextView
        android:id="@+id/tvGelatina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivGelatina" />

    <ImageView
        android:id="@+id/ivNugget"
        android:layout_width="156dp"
        android:layout_height="116dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toEndOf="@+id/ivGelatina"
        app:layout_constraintTop_toBottomOf="@+id/tvGalleta"
        app:srcCompat="@drawable/nuggets" />

    <TextView
        android:id="@+id/tvNugget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.605"
        app:layout_constraintStart_toEndOf="@+id/tvGelatina"
        app:layout_constraintTop_toBottomOf="@+id/ivNugget" />

    <ImageView
        android:id="@+id/ivSushi"
        android:layout_width="119dp"
        android:layout_height="105dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvGelatina"
        app:srcCompat="@drawable/sushi" />

    <TextView
        android:id="@+id/tvSushi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.153"
        app:layout_constraintStart_toEndOf="@+id/ivSushi"
        app:layout_constraintTop_toBottomOf="@+id/tvNugget" />

    <RatingBar
        android:id="@+id/rbCalifica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/botonSms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/rbCalifica"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvSushi"
        app:layout_constraintTop_toBottomOf="@+id/tvNugget" />

</android.support.constraint.ConstraintLayout>
